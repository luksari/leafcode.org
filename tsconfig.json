{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "jsx": "preserve",
    "lib": [
      "dom",
      "esnext"
    ],
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@static/*": ["./static/*"],
      "@src/*": ["src"],
      "@components/*": ["./src/components/*"],
      "@pages/*": ["./src/pages/*"],
      "@templates/*": ["./src/templates/*"],
      "@config/*": ["./src/config/*"],
      "@models/*": ["./src/models/*"],
      "@utils/*": ["./src/utils/*"]
    },
    "plugins": [
      {
        "name": "typescript-styled-plugin",
        "tags": [
          "styled",
          "css",
          "sty"
        ]
      }
    ],
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "noImplicitAny": false,
  },
  "exclude": ["node_modules", "public", ".cache"],
  "include": [
    "./src/**/*"
  ]
}
